#!/usr/bin/env sh

SEP=":"
BASE_DIR=$(dirname $0)

case "`uname`" in
    CYGWIN*)
        BASE_DIR=`cygpath -a -m "${BASE_DIR}"`
        SEP=";"
    ;;
esac

CLASSPATH_B=".${SEP}${BASE_DIR}/../lib/*"
JAVA_OPTS_B="-XX:+AggressiveOpts -Xverify:none -Djava.library.path=${BASE_DIR}/../lib"

java -cp "${CLASSPATH_B}" ${JAVA_OPTS_B} blutwurst.core "$@"
